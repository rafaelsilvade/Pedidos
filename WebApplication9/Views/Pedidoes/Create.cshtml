@model WebApplication9.Models.Pedido

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>



    <div class="form-horizontal control" id="geralPanel">
        <h4>Pedido</h4>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ClienteID, "Cliente: ", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-4">
                @Html.DropDownList("ClienteID", null, htmlAttributes: new { @class = "form-control listSelectfind " })
                @Html.ValidationMessageFor(model => model.ClienteID, "", new { @class = "text-danger" })
            </div>
        
            @Html.LabelFor(model => model.dataEntrega, "Data Entrega: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-addon"><i class="icon-calendar"></i></span>
                    @Html.EditorFor(model => model.dataEntrega, new { htmlAttributes = new { @class = "form-control datepicker" } })
                </div>
                @Html.ValidationMessageFor(model => model.dataEntrega, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-1">
                <div class="col-md-4">
                    <a href="#" onclick="SalvarPedido();" style="width:100%;" class="btn btn-success">Criar Pedido</a>
                </div>
            </div>
        </div>
    }
        @Html.Partial("~/Views/ItensPedidoes/form.cshtml");

